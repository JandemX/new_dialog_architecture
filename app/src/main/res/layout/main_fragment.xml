<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/button_dialog_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open dialog with checkbox" />

    <Button
        android:id="@+id/button_bottomsheet_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open bottomsheet with checkbox" />


    <Button
        android:id="@+id/button_bottomsheet_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open bottomsheet with list items" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainFragment" />

</LinearLayout>
